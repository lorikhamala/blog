<p id="notice"><%= notice %></p>

<h1>Title:
    <%= @post.title %>
</h1>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<div id="comments">

  <% if @post.comments.present? %>
    <h1> Comments </h1>
      <%= render @post.comments %>
  <% end %>

      <br>
      <h3> Add a Comment </h3>
      <%= render partial: "comments/form", locals: {comment: @post.comments.new} %>
</div>

<br> <br>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
